@model IEnumerable<OlympicGamesApp.UI.ViewModels.Picture.PictureIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Managing Pictures</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="jumbotron">
    <h4 id="index-h2">List of all pictures</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThumStringData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageContentType)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ThumStringData" alt="@item.ImageFileName" title="@item.ImageFileName" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageFileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageContentType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) @*|*@
                     <!--@Html.ActionLink("Details", "Details", new { id=item.Id }) |
                     @Html.ActionLink("Delete", "Delete", new { id=item.Id }) -->
                </td>
            </tr>
        }
    </table>
</div>

