@model IEnumerable<OlympicGamesApp.UI.ViewModels.TicketOrder.TicketOrderIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Name</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.Id})
</p>
<hr />
<div class="jumbotron">
    <h4 id="index-h2">List of Orders</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
@if (ViewBag.Id != null)
{
    <p>
        @Html.ActionLink("Back to Profile", "cProfile", "Customer", new { id = ViewBag.Id }, null)
    </p>
}

